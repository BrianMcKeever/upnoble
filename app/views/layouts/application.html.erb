<!DOCTYPE html>
<html>
  <head>
    <title>Upnoble</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/bootstrap-3.3.7-dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bootstrap-3.3.7-dist/css/bootstrap-theme.min.css">
    <%= yield :css %>

    <script type="text/javascript" src="/jquery-3.1.0.min.js"></script>
    <script type="text/javascript" src="/bootstrap-3.3.7-dist/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield :javascript %>
  </head>

  <body>
<div class="container">
      <!-- Static navbar -->
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Upnoble</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="https://www.youtube.com/upworthy">Videos</a></li>
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Topics <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Being A Better Human</a></li>
                  <li><a href="#">Citizenship & Democracy</a></li>
                  <li><a href="#">Culture</a></li>
                  <li><a href="#">Education</a></li>
                  <li><a href="#">Health & Well-Being</a></li>
                  <li><a href="#">Identities</a></li>
                  <li><a href="#">Inspiration</a></li>
                  <li><a href="#">Money & Work</a></li>
                  <li><a href="#">Places</a></li>
                  <li><a href="#">Relationships</a></li>
                  <li><a href="#">Science & Technology</a></li>
                </ul>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Our Company <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#">About Us</a></li>
                  <li><a href="#">Jobs</a></li>
                  <li><a href="#">Blog</a></li>
                  <li><a href="#">Contact</a></li>
                  <li><a href="#">Corrections</a></li>
                  <li><a href="#">Pitch Us</a></li>
                  <li><a href="#">Advertise</a></li>
                  <li><a href="#">Original Videos</a></li>
                  <li><a href="#">RSS Feed</a></li>
                  <li><a href="#">Privacy Policy</a></li>
                  <li><a href="#">Terms of Use</a></li>
                </ul>
              </li>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-form navbar-right">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search Stories">
                </div>
                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></button>
            </ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

    <%= yield %>
  </body>
</div>
</html>

<h1>Registration</h1>
<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited: </h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %> %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <%= f.label :email %><br />
    <%= f.email_field :email %><br />
    <br />
    <%= f.label :password %> <br />
    <%= f.password_field :password %> <br /> <br />

    <%= f.label :password_confirmation %> <br />
    <%= f.password_field :password_confirmation %> <br /> <br />

    <%= f.label :description %> <br />
    <%= f.text_field :description %> <br /> <br />
    <%= f.submit "Register" %>
<% end %>
